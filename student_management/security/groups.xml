<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="module_category_student_management" model="ir.module.category">
            <field name="name">Student Management</field>
            <field name="description">Management functions relate to student</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_student_user" model="res.groups">
            <field name="name">User student</field>
            <field name="category_id" ref="module_category_student_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Nhóm người dùng sinh viên</field>
        </record>

        <record id="group_student_manager" model="res.groups">
            <field name="name">Manager student</field>
            <field name="category_id" ref="module_category_student_management"/>
            <field name="implied_ids" eval="[(4, ref('student_management.group_student_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Nhóm người dùng quản lý sinh viên</field>
        </record>

        <record id="group_library_staff" model="res.groups">
            <field name="name">Staff library</field>
            <field name="category_id" ref="module_category_student_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Nhóm người dùng quản lý thư viện</field>
        </record>
    </data>
</odoo>