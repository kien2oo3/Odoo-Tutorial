<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="student_student_list_view" model="ir.ui.view">
        <field name="name">student.student.list</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="name"/>
                <field name="display_name"/>
                <field name="birth_date"/>
                <field name="email"/>
                <field name="phone_number"/>
            </tree>
        </field>
    </record>
    <record id="student_student_form_view" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
<!--                    <header>-->
<!--                        <button name="custom_method" type="object" string="Custom method" class="btn-primary"/>-->
<!--                    </header>-->
                    <header>
                        <button name="action_show_student_partners" type="object" string="Show partners" class="btn-primary"/>
                    </header>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="name"/>
                            <field name="display_name" readonly="1"/>
                            <field name="class_id"/>
                        </group>
                        <group>
                            <field name="birth_date"/>
                            <field name="email"/>
                            <field name="phone_number"/>
                            <field name="course_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_student_search_view" model="ir.ui.view">
        <field name="name">student.student.search</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
                <field name="name"/>
                <filter name="filter.student.by.birthdate" string="Group by birthdate"
                        context="{'group_by':'birth_date'}"/>
            </search>
        </field>
    </record>
</odoo>